<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Gym Tracker</title>
  <style>
    .container {
        text-align: center;
    }
    .form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
  </style>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
    <button><a href="/">Home</a></button>
    <div class="container">
      <h1>Hello <%= user.name %>,</h1>
      <h2>Welcome to Gym Tracker</h2>
      <p>Where you can track your progress</p>
    </div>

    <form action="/auth/gym" method="POST" class="form">
      <label for="exercise">Exercise:</label>
      <input type="text" id="exercise" name="exercise" required><br>
      <label for="sets">Sets:</label>
      <input type="number" id="sets" name="sets" required><br>
      <label for="reps">Reps:</label>
      <input type="number" id="reps" name="reps" required><br>
      <label for="exercise">Date:</label>
      <input type="text" id="date" name="date" required>
      <br>
      <button type="submit">Submit</button>
      <br>
    </form>

    <div class="w-50 mx-auto rounded border">
    </div>

    <table class="table w-50 mx-auto">
      <thead>
        <tr class="bg-danger text-white">
          <th scope="col">#</th>
          <th scope="col">Exercise</th>
          <th scope="col">Sets</th>
          <th scope="col">Reps</th>
          <th scope="col">Date</th>
        </tr>
      </thead>
      <tbody>
        <% if (data.length != 0) { %>
          <% var i = 1; %>
          <% data.forEach(function(item) { %>
              <tr>
                  <th scope="row"><%= i++ %></th>
                  <td><%= item.exercise %></td>
                  <td><%= item.sets %></td>
                  <td><%= item.reps %></td>
                  <td><%= item.date %></td>
              </tr>
          <% }); %>
      <% } else { %>
          <tr>
              <td colspan="4">No data available</td>
          </tr>
      <% } %>
      
    </tbody>
    </table>
    
</body>
</html>
